<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_rounded"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="@dimen/padding">

    <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쭈피"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_medium"
            android:textStyle="bold" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/click_padding">

        <ImageView
                android:id="@+id/iv_list_birthday"
                style="@style/iv"
                android:layout_marginRight="@dimen/click_padding"
                app:srcCompat="@drawable/ic_birthday" />

        <TextView
                android:id="@+id/tv_item_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_list_birthday"
                android:text="8월 22일"
                android:textColor="@color/txtBlack"
                android:textSize="@dimen/txt_small" />

        <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="\4000~5000"
                android:textColor="@color/genderGrey"
                android:textSize="@dimen/txt_small" />

    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/click_padding"
            android:layout_marginBottom="10dp"
            android:background="@color/light_grey" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_item_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/click_padding"
                android:background="@drawable/bg_tag_rounded"
                android:paddingLeft="10dp"
                android:paddingTop="@dimen/click_padding"
                android:paddingRight="10dp"
                android:paddingBottom="@dimen/click_padding"
                android:text="학천마리"
                android:textColor="@color/txtBlack"
                android:textSize="@dimen/txt_small" />

        <TextView
                android:id="@+id/tv_item_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tag_rounded"
                android:paddingLeft="10dp"
                android:paddingTop="@dimen/click_padding"
                android:paddingRight="10dp"
                android:paddingBottom="@dimen/click_padding"
                android:text="네잎클로버"
                android:textColor="@color/txtBlack"
                android:textSize="@dimen/txt_small" />
    </LinearLayout>
</LinearLayout>