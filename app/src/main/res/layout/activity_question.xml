<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" >
    <data>
        <variable
                name="vm"
                type="com.nexters.yetda.android.question.QuestionViewModel" />
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
        <!--START cardView-->
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/question_card_no"
                    android:padding="@dimen/click_padding"
                    style="@style/iv"
                    app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />
            <ImageView
                    android:layout_toStartOf="@+id/question_card_yes"
                    android:layout_width="match_parent"
                    android:layout_toEndOf="@+id/question_card_no"
                    android:id="@+id/question_card_view"
                    style="@style/iv"
                    android:src="@drawable/members"/>

            <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/question_card_yes"
                    style="@style/iv"
                    android:padding="@dimen/click_padding"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@android:drawable/btn_radio" />

        </RelativeLayout>
        <TextView
                style="@style/btn"
                android:onClick="@{()->vm.clickNextButton()}"
                android:text="@string/idontknow"/>

    </LinearLayout>
</layout>
