<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="vm"
                type="com.nexters.yetda.android.question.QuestionViewModel" />
    </data>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundColor"
            android:orientation="vertical">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->vm.clickBackButton()}"
                app:srcCompat="@drawable/ic_arrow_left" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <TextView
                    style="@style/tvQuestion"
                    android:text="@string/price_q" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="330dp">

                <androidx.cardview.widget.CardView
                        android:layout_width="274dp"
                        android:layout_height="294dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="10dp"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal" >

                    <androidx.cardview.widget.CardView
                            android:layout_width="233dp"
                            android:layout_height="250dp"
                            android:layout_marginTop="20dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardElevation="10dp"
                            app:cardUseCompatPadding="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" >

                        <androidx.cardview.widget.CardView
                                android:layout_width="198dp"
                                android:layout_height="214dp"
                                android:layout_marginTop="10dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardElevation="10dp"
                                app:cardUseCompatPadding="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--
                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/layout_question_container"
                                android:layout_width="275dp"
                                android:layout_height="294dp"
                                android:background="#FFEB3B" />
            -->


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_interval"
                    android:gravity="center"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/side_interval"
                        app:srcCompat="@drawable/selector_btn_x" />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/selector_btn_o" />

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_interval"
                    android:text="@string/idontknow" />
        </LinearLayout>
    </LinearLayout>

</layout>
